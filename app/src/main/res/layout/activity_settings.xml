<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearSettings"
        style="@style/groupStylewhite_A700"
        android:layout_width="414dp"
        android:layout_height="770dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/txtUstawienia"
            style="@style/txtLexendsemibold32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/lbl_ustawienia" />
        <LinearLayout
            android:id="@+id/linearRowinformacjeoap_ust"
            style="@style/groupStylegray_1"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ust_urz"
                style="@style/groupStylegray_1"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:stateListAnimator="@null"
                android:text="Ustawienia urządzenia"
                android:textAlignment="viewStart"
                android:textAppearance="@style/txtLexendregular16" />

            <ImageView
                android:id="@+id/imageAdvance"
                android:layout_width="@dimen/_30pxh"
                android:layout_height="@dimen/_30pxh"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:scaleType="fitXY"
                android:src="@drawable/img_advance"
                tools:ignore="ContentDescription" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearRowinformacjeoap_apl"
            style="@style/groupStylegray_1"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:orientation="horizontal">

            <Button
                android:id="@+id/inf_apl"
                style="@style/groupStylegray_1"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:stateListAnimator="@null"
                android:text="Informacje o aplikacji"
                android:textAlignment="viewStart"
                android:textAppearance="@style/txtLexendregular16" />

            <ImageView
                android:id="@+id/imageAdvanceduoo"
                android:layout_width="@dimen/_30pxh"
                android:layout_height="@dimen/_30pxh"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:scaleType="fitXY"
                android:src="@drawable/img_advance"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowautorzy_urz"
            style="@style/groupStylegray_1"
            android:layout_width="393dp"
            android:layout_height="47dp"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:orientation="horizontal"
            android:stateListAnimator="@null">

            <Button
                android:id="@+id/inf_urz"
                style="@style/groupStylegray_1"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:stateListAnimator="@null"
                android:text="Informacje o urządzeniu"
                android:textAlignment="viewStart"
                android:textAppearance="@style/txtLexendregular16" />

            <ImageView
                android:id="@+id/inf_urz_img"
                android:layout_width="@dimen/_30pxh"
                android:layout_height="@dimen/_30pxh"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/img_advance"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearRowautorzy_autorzy"
            style="@style/groupStylegray_1"
            android:layout_width="393dp"
            android:layout_height="47dp"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:orientation="horizontal"
            android:stateListAnimator="@null">

            <Button
                android:id="@+id/autorzy"
                style="@style/groupStylegray_1"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:stateListAnimator="@null"
                android:text="Autorzy"
                android:textAlignment="viewStart"
                android:textAppearance="@style/txtLexendregular16" />

            <ImageView
                android:id="@+id/imageAdvanceSix"
                android:layout_width="@dimen/_30pxh"
                android:layout_height="@dimen/_30pxh"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/img_advance"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="394dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtHomeOne2"
            style="@style/txtLexendmedium11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/_3pxh"
            android:singleLine="true"
            android:text="@string/lbl_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.736"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.686" />

        <ImageView
            android:id="@+id/imageSettings2"
            android:layout_width="@dimen/_19pxh"
            android:layout_height="@dimen/_20pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.717"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.319"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageVolume2"
            android:layout_width="@dimen/_22pxh"
            android:layout_height="@dimen/_22pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_volume"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageHome2"
            android:layout_width="@dimen/_18pxh"
            android:layout_height="@dimen/_18pxh"
            android:layout_gravity="start"
            android:scaleType="fitXY"
            android:src="@drawable/img_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.273"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:alpha="0"
            android:color="#66FF0000"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/statisticButton_urz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/statisticButton_urz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:color="#66FF0000"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.473" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtWersjaaplikacj"
        style="@style/txtLexendsemibold12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895"
        android:text="@string/msg_wersja_aplikacj" />

</androidx.constraintlayout.widget.ConstraintLayout>